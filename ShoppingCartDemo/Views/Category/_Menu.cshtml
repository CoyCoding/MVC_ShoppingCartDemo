@model ShoppingCartDemo.Models.ViewModel.CategoryViewModel

@Html.ActionLink("All","Store", "Home", null,
    new { @class = "btn btn-block btn-default btn-outline-info product" +
    (Model.CurrentCategory == null ? " active btn-lg" : "")})

@foreach (var category in Model.Categories)
{
    @Html.RouteLink(category, new
    {
    controller = ViewBag.Controller,
    action= ViewBag.Action,
    category = category,
    page = 1
    },

    new { @class = "btn btn-block btn-outline-info product" +
    (category == Model.CurrentCategory ? " active btn-lg" : "")})
}

