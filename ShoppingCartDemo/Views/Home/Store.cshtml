@using ShoppingCartDemo.Models.HtmlHelpers
@model ShoppingCartDemo.Models.ProductListViewModel

@{

    ViewBag.Title = "Shopping cart display";
    Layout = "~/views/shared/_Layout.cshtml";

}
    <div class="store-banner container body-content mt-4">
        <div class="store-banner-text text-center" ><h2>@ViewBag.Title</h2></div>
    </div>
<div class="container">
    

    <div class="row">
        <div id="CatSelection" class="col-3 pt-4 mr-0">
            Place Holder Text
        </div>
        <div class="col-9">
            @foreach (var product in Model.Products)
            {
                <div class="card p-4  ml-2 mt-4 mb-4 product-card-bg">
                    <h3 >
                        <b class="">@String.Format(product.Name):</b>
                        <span class="badge badge-info float-right price-shadow">@String.Format("{0:C}", product.Price)</span>
                    </h3>
                    <span>@product.Description</span>

                </div>

            }
            <div class="btn-group-sm float-right p-2 m-3">
                @Html.PaginationLinks(Model.PagingInfo, pageNum => Url.Action("Store", new { page = pageNum }))
            </div>
        </div>
       
    </div>
</div>

@section Scripts{

}