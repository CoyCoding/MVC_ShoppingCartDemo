@using ShoppingCartDemo.Models.HtmlHelpers
@model ShoppingCartDemo.Models.ProductListViewModel

@{

    ViewBag.Title = "Product Display";
    Layout = "~/views/shared/_Layout.cshtml";

}
    <div class="store-banner container body-content">
        <div class="store-banner-text text-center" ><h2>@ViewBag.Title</h2></div>
    </div>
<div class="container">
    

    <div class="row">
        <div id="CatSelection" class="col-5 col-lg-3">
            @foreach (var product in Model.Products)
            {
                <div class="card p-4  ml-2 mb-4 product-card-bg">
                    <span class="product-discript">This is some text</span>

                </div>

            }
        </div>

        <div class="col-7 col-lg-9">
            @foreach (var product in Model.Products)
            {
                <div class="card p-4  ml-2 mb-4 product-card-bg">
                    <h3 class="product">
                        <b class="">@String.Format(product.Name):</b>
                        <span class="badge badge-info float-right price-shadow">@String.Format("{0:C}", product.Price)</span>
                    </h3>
                    <span class="product-discript">@product.Description</span>

                </div>

            }
            <div class="btn-group-sm float-right p-2 m-3">
                @Html.PaginationLinks(Model.PagingInfo, pageNum => Url.Action("Store", new { page = pageNum }))
            </div>
        </div>
       
    </div>
</div>

@section Scripts{

}